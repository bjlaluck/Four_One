            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <div class="projectName">
            <%= link_to "Bikes Berlin", root_path, class: "navbar-brand" %>
          </div> <!--end projectName -->
        </div><!-- end navbar header-->
        <div class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li class="<%= 'active' if current_page?(root_path) %>"><%= link_to "Home", root_path, class: "dropdown-toggle" %></li>
            <li class="<%= 'active' if current_page?(simple_pages_about_path) %>"><%= link_to "About", simple_pages_about_path, class: "dropdown-toggle" %></li>
